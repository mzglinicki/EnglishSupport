<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dictionaryLayout"
    style="@style/mainTheme">

    <LinearLayout
        android:id="@+id/spinners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mainMargin"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/nativeLanguageField"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Polski"
            android:textSize="@dimen/subheadingTextSize" />

        <ImageButton
            android:id="@+id/btnChangeTransLanguage"
            style="@style/iconStyle"
            android:background="@drawable/btn_round_corner"
            android:src="@drawable/ic_compare_arrows_white" />

        <TextView
            android:id="@+id/translateLanguageField"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Angielski"
            android:textSize="@dimen/subheadingTextSize" />


    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/nativeInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/lessonEditTextStartMargin"
        android:layout_marginStart="@dimen/lessonEditTextStartMargin"
        android:layout_marginTop="@dimen/lessonEditTextStartMargin">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/nativeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Polski"
            android:textSize="@dimen/subheadingTextSize" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnBing"
            style="@style/dictionaryButtonStyle"
            android:text="@string/btn_bing" />

        <Button
            android:id="@+id/btnMyDictionary"
            style="@style/dictionaryButtonStyle"
            android:text="@string/btn_myDictionary" />

    </LinearLayout>

    <TextView
        android:id="@+id/translatedFieldTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/lessonEditTextStartMargin"
        android:layout_marginEnd="@dimen/lessonEditTextStartMargin"
        android:layout_marginStart="@dimen/lessonEditTextStartMargin"
        android:text="TÅ‚umaczenie:"
        android:textColor="@color/mainTextColor"
        android:textSize="@dimen/subheadingTextSize" />

    <ListView
        android:id="@+id/translatedWordListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

</LinearLayout>